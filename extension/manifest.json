{
  "manifest_version": 3,
  "name": "ПМ АТВ - Автотестирование веб-форм",
  "version": "1.0.0",
  "description": "Автоматизированное тестирование веб-форм с генерацией тестовых данных",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "webNavigation",  
    "sidePanel"       
  ],
  
  "host_permissions": [
    "<all_urls>",  
    "http://localhost:8000/*",
    "ws://localhost:8000/*"  
  ],
  
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}